<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_menu_image"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_font"
        android:textColor="@color/app_color_primary"
        android:textFontWeight="700"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_menu_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sate Ayam" />

    <TextView
        android:id="@+id/tv_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_font"
        android:textColor="@color/app_color_primary"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/iv_menu_image"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_name"
        tools:text="IDR 28.000" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_more_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_menu_image"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_price">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_font"
            android:text="@string/text_notes"
            android:textColor="@color/app_color_primary"
            android:textFontWeight="400"
            android:textSize="16sp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_font"
            android:textColor="@color/app_color_primary"
            android:textFontWeight="400"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>