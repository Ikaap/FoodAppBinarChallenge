<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_menu_image"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_menu_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_font"
        android:textColor="@color/app_color_primary"
        android:textFontWeight="700"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/cv_menu_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sate Ayam" />

    <TextView
        android:id="@+id/tv_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_font"
        android:textColor="@color/app_color_primary"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/cv_menu_image"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_name"
        tools:text="IDR 28.000" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_note_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="5"
        android:layout_marginStart="20dp"
        android:hint="@string/text_notes"
        android:background="@null"
        android:fontFamily="@font/inter_font"
        android:gravity="top"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:text="porsinya yang banyak ka hihih"
        android:textColor="@color/subText"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_menu_image"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_price" />


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_note_menu"/>

    <LinearLayout
        android:id="@+id/ll_action_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        app:layout_constraintTop_toBottomOf="@id/et_note_menu">

        <TextView
            android:id="@+id/tv_min_order"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_button_primary_transparent"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_calculate_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:text="@string/text_0"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_plus_order"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_button_primary_transparent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>