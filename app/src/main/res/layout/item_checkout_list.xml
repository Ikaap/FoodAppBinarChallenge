<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_menu_image"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_menu_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_font"
        android:textColor="@color/app_color_primary"
        android:textFontWeight="700"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/cv_menu_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sate Ayam" />

    <TextView
        android:id="@+id/tv_total_calculate_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter_font"
        android:textColor="@color/app_color_primary"
        android:textFontWeight="500"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="x1" />

    <TextView
        android:id="@+id/tv_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_font"
        android:textColor="@color/app_color_primary"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/cv_menu_image"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_name"
        tools:text="IDR 28.000" />

        <TextView
            android:id="@+id/tv_note_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/inter_font"
            android:gravity="top"
            android:text="porsinya yang banyak ka hihih"
            android:textColor="@color/subText"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_menu_image"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_price" />


</androidx.constraintlayout.widget.ConstraintLayout>